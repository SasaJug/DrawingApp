<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">


            <com.sasaj.graphics.drawingapp.ui.brushselector.views.BrushSample
                android:id="@+id/brushSample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <SeekBar
                android:id="@+id/brushSizeSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:max="100"/>

            <SeekBar
                android:id="@+id/brushBlurSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:max="50"/>

            <com.sasaj.graphics.drawingapp.ui.brushselector.views.ColorSelectorView
                android:id="@+id/colorSelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
            </com.sasaj.graphics.drawingapp.ui.brushselector.views.ColorSelectorView>

        </LinearLayout>

    </ScrollView>

</merge>